{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-native",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noEmit": true,

    // もし '@/...' のエイリアスを使いたいならこのまま
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  // global.d.ts を必ず含める
  "include": [
    "src",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js"
  ]
}